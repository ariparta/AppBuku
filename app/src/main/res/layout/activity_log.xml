<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="id.ari.appbuku.LogActivity"
    android:background="@drawable/bg_2">
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:background="@drawable/books"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/orkney_bold"
            android:text="@string/str_welcome"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/orkney_light"
            android:text="@string/str_welcome2"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="140dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"

                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/kategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/bg_edittext_login"
                        android:fontFamily="@font/orkney_bold"
                        android:text="Data Buku"
                        android:textAlignment="center"
                        android:textColor="@color/dark_blue"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textnama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/kategori"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/orkney_bold"
                        android:text="Nama Buku"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textnama"

                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:text="Nama Buku"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textgenre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nama"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/orkney_bold"
                        android:text="Genre"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/genre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textgenre"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:text="Genre"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textsinopsis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/genre"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/orkney_bold"
                        android:text="Sinopsis Buku"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sinopsis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textsinopsis"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:text="Sinopsis"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/texttanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sinopsis"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/orkney_bold"
                        android:text="Tanggal Terbit"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texttanggal"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:text="21/02/2020"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textpemeran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tanggal"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/orkney_bold"
                        android:text="Penulis Buku"
                        android:textColor="@color/dark_blue"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pemeran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textpemeran"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:text="Penulis"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textrating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pemeran"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/orkney_bold"
                        android:text="Rating"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textrating"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginBottom="20dp"
                        android:text="10"
                        android:textSize="16sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>